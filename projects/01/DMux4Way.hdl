/**
 * 4-way demultiplexor:
 * {a, b, c, d} = {in, 0, 0, 0} if sel == 00
 *                {0, in, 0, 0} if sel == 01
 *                {0, 0, in, 0} if sel == 10
 *                {0, 0, 0, in} if sel == 11
 */

CHIP DMux4Way {
    IN in, sel[2];
    OUT a, b, c, d;

    PARTS:
    // Put your code here:
    DMux(in=in,sel=sel[0],a=out1,b=out2);
    DMux(in=out1,sel=sel[1],a=a,b=c);
    DMux(in=out2,sel=sel[1],a=b,b=d);
    // attention!!!! the sel[0] is the rightmost bit!!!!!

}