/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here:
    Not(in=sel,out=sb);
    And(a=a,b=sb,out=s1);
    And(a=b,b=sel,out=s2);
    Or(a=s1,b=s2,out=out);
}